<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>detalles</title>
  <link rel="stylesheet" type="text/css" href="/stylesheets/stylecuadricula.css">
</head>
<body>
  <h1 class="my-title">detalles</h1>
  <div class="product-grid">
    <% producto.forEach(producto => { %>
      <div class="product">
        <h2><%= producto.producto_name %></h2>
        <p>codigo: <%= producto.producto_code %></p>
        <p>Precio: <%= producto.price %></p>
        <p>Descripci√≥n: <%= producto.description %></p>
        <p>Categoria: <%= producto.category_name %></p>
        <p>Modelo: <%= producto.brand %></p>
        <p>Marca: <%= producto.model %></p>
        <p>Lote: <%= producto.stock %></p>
        <% if (producto.imagen_url) { %>
          <img alt="Product image" src="<%= producto.imagen_url %>" width="200" height="150">
        <% } else { %>
          No hay imagen disponible
        <% } %>
      </div>
    <% }); %>
</div>
</body>
</html>